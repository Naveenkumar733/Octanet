class ATM:
  def __init__(self, balance=0, pin="1234"):
    self.balance = balance
    self.pin = pin
    self.transaction_history = []
  def verify_pin(self, entered_pin):
    if entered_pin == self.pin:
      return True
    else:
      print("Incorrect PIN.")
      return False
  def inquiry(self):
    print(f"Your current balance is: ${self.balance}")
    self.transaction_history.append("Balance inquiry")
  def withdraw(self, amount):
    if amount > self.balance:
      print("Insufficient balance.")
    else:
      self.balance-= amount
      print(f"${amount} withdrawn. Your new balance is: ${self.balance}")
      self.transaction_history.append(f"Withdrew ${amount}")
  def deposit(self, amount):
    self.balance += amount
    print(f"${amount} deposited. Your new balance is: ${self.balance}")
    self.transaction_history.append(f"Deposited ${amount}")
  def change_pin(self, old_pin, new_pin):
    if self.verify_pin(old_pin):
      self.pin = new_pin
      print("PIN changed successfully.")
      self.transaction_history.append("PIN changed")
  def show_transaction_history(self):
    print("Transaction History:")
    if not self.transaction_history:
      print("No transactions yet.")
    else:
      for transaction in self.transaction_history:
        print(f"- {transaction}")
  def atm_simulation():
    atm =ATM(balance=1000) # Starting with $1000 balance
    while True:
      print("\nATM Machine Menu:")
      print("1. Balance Inquiry")
      print("2. Withdraw Cash")
      print("3. Deposit Cash")
      print("4. Change PIN")
      print("5. Transaction History")
      print("6. Exit")
      choice = input("Choose an option (1-6): ")
        if choice == '1':
          atm.inquiry()
        elif choice == '2':
          pin = input("Enter your PIN: ")
          if atm.verify_pin(pin):
            amount =float(input("Enter amount to withdraw: $"))
            atm.withdraw(amount)
        elif choice == '3':
          pin = input("Enter your PIN: ")
          if atm.verify_pin(pin):
            amount =float(input("Enter amount to deposit: $"))
            atm.deposit(amount)
        elif choice == '4':
          old_pin = input("Enter your old PIN: ")
          new_pin = input("Enter your new PIN: ")
          atm.change_pin(old_pin, new_pin)
        elif choice == '5':
          pin = input("Enter your PIN: ")
          if atm.verify_pin(pin):
            atm.show_transaction_history()
        elif choice == '6':
          print("Exiting...")
          break
        else:
          print("Invalid choice, please try again.")
atm_simulation()
